body
  padding-top 50px
  font 14px 'Lucida Grande', Helvetica, Arial, Sans-Serif
  text-decoration: none

a
  color #00B7FF
  text-decoration: none
  h4
    text-decoration: none

.header
  margin-bottom: 0

.sidebar
  positon: fixed
  bottom: 0
  left: 0
  z-index: 100
  display: block
  padding: 0
  background-color: #e9e9e7
  padding-left: 1px
  padding-right: 1px
  border-right: 1px solid #e9e9e7
  height: 1000px

.search-box
  padding-left: -15px
  padding-right: -15px
  padding-bottom: 10px
  margin-top: 10px
  margin-bottom: 20px
  margin-left: -14px
  margin-right: -14px
  border-bottom: 1px solid white

.group-box
  margin-left: -14px
  margin-right: -14px
  margin-bottom: 10px
  ul
    li
      background-color: white
    li.even
    li:nth-child(even)
      background-color: white
    stripe()
    li.active
      a
        color: #f2f2eb
        background-color: #428bca
  ul.group-list
    margin-bottom: 10px

